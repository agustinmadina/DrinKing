<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical"
              tools:context="co.mobilemakers.drinking.ChallengeFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/score_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/condensed_normal_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/red"
                    android:textColor="@color/accent"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/text_view_red_score"
                    style="@style/condensed_normal_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Score"
                    android:textSize="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    style="@style/condensed_normal_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/blue"
                    android:textColor="@color/material_blue"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/text_view_blue_score"
                    style="@style/condensed_normal_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Score"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_penalty"
            style="@style/condensed_normal_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Somebody drinks 6 sips"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textIsSelectable="false">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/layout_players">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_win_player_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:adjustViewBounds="false"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/placeholder"
                    android:layout_weight="10"/>

                <TextView
                    android:id="@+id/text_view_player_1"
                    style="@style/condensed_normal_large"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Player 1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/button_win_player_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/placeholder"
                    android:layout_weight="10"/>

                <TextView
                    android:id="@+id/text_view_player_2"
                    style="@style/condensed_normal_large"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Player 2"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16dp">
                </TextView>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_challenge_title"
            style="@style/condensed_normal_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:paddingTop="10dp"
            android:text="Challenge title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/card_layout"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text_view_challenge"
                    style="@style/condensed_normal_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="center">
                </TextView>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
