<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
              tools:context="co.mobilemakers.drinking.SelectModeFragment"
              android:background="#FFFFFF"
              android:gravity="center_vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_view_game_mode"
        android:id="@+id/text_view_game_mode"
        android:layout_gravity="center_horizontal"
        style="@style/condensed_normal_large"
        android:layout_margin="20dp">
    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/switch_game_mode_solo"
            android:id="@+id/text_view_mode_solo"
            android:paddingRight="15dp"
            style="@style/condensed_normal_large">
        </TextView>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_game_mode"
            android:padding="10dp"
            android:checked="true"
            android:showText="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/switch_game_mode_team"
            android:id="@+id/text_view_mode_team"
            android:paddingLeft="15dp"
            style="@style/condensed_normal_large">
        </TextView>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_players"
        android:id="@+id/button_add_players"
        style="@style/btnStyleYellow"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"/>

</LinearLayout>
